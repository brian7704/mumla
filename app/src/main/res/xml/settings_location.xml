<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="enable_traccar"
        android:title="Enable Traccar" />
    <EditTextPreference
        android:defaultValue="http://192.168.1.10:5055"
        android:key="traccar_url"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:dependency="enable_traccar"
        android:title="@string/traccar_url" />
    <EditTextPreference
        android:defaultValue="12345"
        android:key="traccar_id"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:dependency="enable_traccar"
        android:title="@string/traccar_id" />
</PreferenceScreen>